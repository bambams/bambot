#!/bin/bash

build_dir="$(dirname "$0")" || exit $?;
build_dir="${build_dir:-.}";
cd "$build_dir/.." || exit $?;

source build/rc;

dist="$(get-dist)" || exit $?;

if [ ! -f "$dist" -o "$1" == -f ]; then
    ./build/build "$@" || exit $?;
fi

dist="$(get-dist)" || exit $?;
install_log="$(cpanm "$dist" 2>&1)";
errno=$?;

if [ $errno != 0 ]; then
    echo -n "$install_log" 1>&2;
    exit $errno;
fi;

echo "Installing $dist... done.";
