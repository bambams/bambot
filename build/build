#!/bin/bash

source build/rc;

if ! ./build/compile; then
    echo "Code doesn't compile... Aborting.";
    exit 1;
fi;


dist="$(get-dist)" || exit $?;

if [ -f Makefile -a "$1" == -f ]; then
    make distclean || exit $?;
fi;

perl Makefile.PL || exit $?;

if [ -f "$dist" ]; then
    mv -f "$dist" "$dist.old";
fi

make dist || exit $?;
