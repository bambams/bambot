#!/bin/bash

build_dir="$(dirname "$0")" || exit $?;
build_dir="${build_dir:-.}";
cd "$build_dir/.." || exit $?;

config=config.debug;
log_dir=logs.debug;

if [ ! -f "$config" ]; then
    echo "'$config' not found." 1>&2;
    exit 1;
fi;

if [ ! -e "$log_dir" ]; then
    mkdir "$log_dir";
fi;

PERL5LIB=lib scripts/bambot -F"$config" -L"$log_dir";
